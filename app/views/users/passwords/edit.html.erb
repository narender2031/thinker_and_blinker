<div class="container pt-5">
  <div class="row justify-content-center p-4">
    <div class="col-md-6 col-sm-12 col-xs-12">
      <div class="card p-5 shadow">
        <div class="text-center pb-5">
          <%= image_tag "setup_password.svg", class: "" , style: "max-width: 55%;"%>
        </div>
        <h2 class="h4 text-center text-primary pb-5">Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
          </div>

          <div class="actions d-flex justify-content-center py-2 pb-3">
            <%= f.submit "Change my password",  class: 'btn btn-primary text-uppercase' %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>